{
  "name": "YTranslator",
  "version": "1.0",
  
  "description": "Simplifies translation of the selected word with lingvo.yandex.ru",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" 
  },
  // "default_locale": "en",
  
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
      "ytranslator.js"
      ], 
      "matches": [
      "http://*/*"
      ]
    }
  ],
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]
}